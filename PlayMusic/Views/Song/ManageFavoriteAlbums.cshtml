@model IEnumerable<PlayMusic.Models.tblMusic>

@{
    ViewBag.Title = "Danh sách yêu thích";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="container my-4">
    <h2 class="text-center">Danh Sách Bài Hát Yêu Thích</h2>

    @if (Model.Any())
    {
        <table class="table table-striped">
            <thead class="table-light">
                <tr>
                    <th>Tên Bài Hát</th>
                    <th>Ca Sĩ</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var song in Model)
                {
                    <tr>
                        <td>@song.DisplayName</td> <!-- Hiển thị tên bài hát -->
                        <td>@song.casi</td> <!-- Hiển thị ca sĩ -->
                        <td>
                            @Html.ActionLink("Chi Tiết", "Details", "Song", new { id = song.iDmusic }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Xóa", "RemoveFromFavorite", "Song", new { id = song.iDmusic }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="color:red; text-align:center;">Bạn Cần Đăng Nhập Để Có Thể Thêm Những Bài Hát Vào Mục Yêu Thích.</p>
    }
</div>
