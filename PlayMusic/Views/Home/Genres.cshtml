@model IEnumerable<PlayMusic.Models.chude>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chủ Đề - Music App</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .chude-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .chude-item {
            width: 120px;
            height: 120px;
            background-image: linear-gradient(-243deg, #fb6b60 0%, #FF2E55 100%);
            color: white;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            font-weight: bold;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .chude-item:hover {
                transform: scale(1.1);
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
            }

        .section-header {
            text-align: center;
            margin-bottom: 30px;
            font-size: 1.5rem;
            font-weight: bold;
        }

        hr {
            width: 85%;
            margin: 20px auto;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <!-- Tiêu đề -->
        <h3 class="section-header">Thể Loại</h3>

        <!-- Chủ đề -->
        <div class="chude-container">
            @foreach (var topic in Model)
            {
                <a href="@Url.Action("GetSongsByChude", "Home", new { id = topic.IDchude })" class="chude-item">
                    @topic.theloai1
                </a>
            }
        </div>

        <hr />
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
