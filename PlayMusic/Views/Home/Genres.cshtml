@model IEnumerable<PlayMusic.Models.chude>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chủ Đề - Music App</title>
    <style>
        /* Same styling as before */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            display: flex;
            flex-direction: column;
            flex: 1;
            padding: 20px;
        }

        .chude {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

            .chude a {
                width: 100px;
                height: 100px;
                margin: 10px;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                text-decoration: none;
                border-radius: 10px;
                text-align: center;
                background-size: cover;
                background-position: center;
                background-image: linear-gradient(-243deg, #fb6b60 0%, #FF2E55 100%);
            }

        .nhamoi {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .audion {
            display: flex;
            align-items: center;
            margin: 10px;
        }

        .imgg {
            width: 100px;
            height: 100px;
            border-radius: 10px;
            margin-right: 10px;
        }

        .per-r {
            display: flex;
            flex-direction: column;
        }

            .per-r .title {
                font-size: 16px;
                font-weight: bold;
                color: black;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="container">
        <h3>Thể Loại</h3>
        <div class="chude">
            @foreach (var topic in Model)
            {
    <a href="@Url.Action("GetSongsByChude", "Home", new { id = topic.IDchude })">
        @topic.theloai1
    </a>            }
        </div>

        <hr style="width:85%" />
       
    </div>
</body>
</html>
