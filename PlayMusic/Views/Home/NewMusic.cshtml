@model IEnumerable<PlayMusic.Models.tblMusic>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nhạc Mới - Music App</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .song-item img {
            width: 100px;
            height: 100px;
            border-radius: 10px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .song-item img:hover {
                transform: scale(1.1);
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
            }

        .song-title {
            font-weight: bold;
            text-decoration: none;
            color: black;
        }

            .song-title:hover {
                text-decoration: underline;
                color: #fb6b60;
            }

        .suggestion img {
            width: 120px;
            height: 120px;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

            .suggestion img:hover {
                transform: scale(1.05);
            }

        hr {
            width: 85%;
            margin: 20px auto;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <!-- Phần Nhạc Mới -->
        <h3>
            <a href="@Url.Action("Index", "Home")" class="text-dark text-decoration-none">Trang chủ</a> - Nhạc Mới
        </h3>
        <hr />

        <div class="row">
            @foreach (var song in Model)
            {
                <div class="col-6 col-md-4 col-lg-2 mb-4 text-center song-item">
                    <a href="@Url.Action("Details", "Song", new { id = song.iDmusic })">
                        <img src="@song.Image" alt="@song.DisplayName" class="img-fluid" />
                    </a>
                    <p class="mt-2">
                        <a href="@Url.Action("Details", "Song", new { id = song.iDmusic })" class="song-title">@song.DisplayName</a><br />
                        <small>@song.casi</small>
                    </p>
                </div>
            }
        </div>

        <!-- Phần Gợi Ý Cho Bạn -->
        <h3 class="mt-5">Gợi ý cho bạn</h3>
        <hr />
        <div class="row suggestion">
            <div class="col-6 col-md-4 col-lg-2 mb-4 text-center">
                <a href="nhungbaihatcua.aspx?namecasi=1" class="text-dark text-decoration-none">
                    <img src="/image/landscape-avatar-copy-4-15912036198111330174400-crop-15912037063321439019614.jpg" alt="Bích Phương" class="img-fluid" />
                    <p>Những bài hát hay nhất của Bích Phương</p>
                </a>
            </div>
            <div class="col-6 col-md-4 col-lg-2 mb-4 text-center">
                <a href="nhungbaihatcua.aspx?namecasi=2" class="text-dark text-decoration-none">
                    <img src="/image/123.jpg" alt="Đen Vâu" class="img-fluid" />
                    <p>Những bài hát hay nhất của Đen Vâu</p>
                </a>
            </div>
            <div class="col-6 col-md-4 col-lg-2 mb-4 text-center">
                <a href="nhungbaihatcua.aspx?namecasi=3" class="text-dark text-decoration-none">
                    <img src="/image/1333.jpg" alt="Vũ" class="img-fluid" />
                    <p>Những bài hát hay nhất của Vũ</p>
                </a>
            </div>
            <div class="col-6 col-md-4 col-lg-2 mb-4 text-center">
                <a href="nhungbaihatcua.aspx?namecasi=4" class="text-dark text-decoration-none">
                    <img src="/image/a9ts.jpg" alt="Hoàng Dũng" class="img-fluid" />
                    <p>Những bài hát hay nhất của Hoàng Dũng</p>
                </a>
            </div>
            <div class="col-6 col-md-4 col-lg-2 mb-4 text-center">
                <a href="nhungbaihatcua.aspx?namecasi=5" class="text-dark text-decoration-none">
                    <img src="/image/af901b4457bbf85a9e7e6754bdb71c44.jpg" alt="Đức Phúc" class="img-fluid" />
                    <p>Những bài hát hay nhất của Đức Phúc</p>
                </a>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
