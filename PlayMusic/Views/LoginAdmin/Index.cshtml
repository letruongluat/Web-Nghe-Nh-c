@{
    Layout = null;
    ViewBag.Title = "LoginAdmin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #4e54c8, #8f94fb);
            overflow: hidden;
        }

        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 30px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
            position: relative;
            animation: slide-up 0.6s ease-out;
        }

        /* Tiêu đề */
        .header-title {
            text-align: center;
            margin-bottom: 30px;
            color: #4e54c8;
            animation: fade-in 1.5s ease-out;
        }

        /* Hiệu ứng fade-in cho tiêu đề */
        @@keyframes fade-in {
            0% { opacity: 0; }
            100% { opacity: 1; }
        }

        /* Hiệu ứng slide-up cho container */
        @@keyframes slide-up {
            0% { transform: translateY(20px); opacity: 0; }
            100% { transform: translateY(0); opacity: 1; }
        }

        .form-label {
            font-size: 14px;
            color: #666;
        }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ddd;
            padding: 10px;
            font-size: 14px;
            color: #333;
            transition: all 0.3s ease-in-out;
        }

        .form-control:focus {
            border-color: #4e54c8;
            box-shadow: 0 0 5px rgba(78, 84, 200, 0.5);
        }

        /* Hiệu ứng hover cho nút đăng nhập */
        .btn-primary {
            background-color: #4e54c8;
            border: none;
            border-radius: 5px;
            color: white;
            font-size: 16px;
            width: 100%;
            padding: 10px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-primary:hover {
            background-color: #3b43b5;
            transform: scale(1.05);
        }

        /* Hiệu ứng cho thông báo lỗi */
        .error-message {
            color: red;
            font-size: 14px;
            text-align: center;
            animation: fade-in-error 1s ease-out;
        }

        @@keyframes fade-in-error {
            0% { opacity: 0; transform: translateY(10px); }
            100% { opacity: 1; transform: translateY(0); }
        }

    </style>
</head>
<body>

    <div class="login-container">
        <div class="header-title">
            <h2>Đăng Nhập Admin</h2>
        </div>

        <form method="post" action="@Url.Action("Index", "Admin")">
            <div class="mb-3">
                <label for="username" class="form-label">Tên đăng nhập:</label>
                <input type="text" id="username" name="username" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu:</label>
                <input type="password" id="password" name="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Đăng nhập</button>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <p class="error-message">@ViewBag.Error</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
