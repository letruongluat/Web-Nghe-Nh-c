@model PlayMusic.Models.tblAccount

@{
    ViewBag.Title = "Thêm người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    /* Cấu hình chung cho các nút */
    .btn {
        padding: 10px 20px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 4px;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn:hover {
            opacity: 0.8;
        }

    /* Nút "Lưu" */
    .btn-primary {
        margin-bottom:20px;

        background-color: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Nút "Hủy" */
    .btn-default {
        background-color: #6c757d;
        color: white;
    }

        .btn-default:hover {
            background-color: #5a6268;
        }

    /* Style cho form và các ô nhập liệu */
    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .form-group input, .form-group select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
        }

            .form-group input:focus, .form-group select:focus {
                border-color: #007bff;
                outline: none;
            }

    /* Style cho trang "Thêm người dùng mới" */
    h2 {
        margin-bottom: 20px;
        font-size: 24px;
        font-weight: bold;
        color: #333;
    }

    /* Style cho form trong trang Thêm người dùng */
    form {
        background-color: #f8f9fa;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
       
    }

        form .form-group {
            margin-bottom: 20px;
        }

            form .form-group input {
                margin-bottom: 10px;
            }

        form .btn-primary {
            width: 100%;
            font-size: 16px;
        }

        form .btn-default {
            width: 100%;
            font-size: 16px;
        }
</style>
<div>
    <h2>Thêm người dùng mới</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">

            @Html.LabelFor(model => model.IDacount)
            @Html.EditorFor(model => model.IDacount, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.Password)
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.email)
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ngaysinh)
            @Html.EditorFor(model => model.ngaysinh, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.gioitinh)
            @Html.EditorFor(model => model.gioitinh, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        @Html.ActionLink("Hủy", "Users", "Admin", null, new { @class = "btn btn-default" })
    }
</div>