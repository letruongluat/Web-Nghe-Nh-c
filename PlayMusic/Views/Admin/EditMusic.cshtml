@model PlayMusic.Models.tblMusic

@{
    ViewBag.Title = "Chỉnh sửa bài nhạc";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    form {
        width: 150%;
        margin: 0 auto;
        padding: 50px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        \
    }

    /* Form title */
    h3 {
        text-align: center;
        color: #333;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Form labels */
    .form-group label {
        display: block;
        width: 100%;
        font-weight: bold;
        margin-bottom: 5px;
        color: #555;
    }

    /* Input fields */
    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

    input, select, textarea {
        width: 200%;
    }

    input, select, textarea {
        max-width: 800px;
    }

    /* Buttons */
    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-default {
        background-color: #6c757d;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        margin-left: 10px;
    }

        .btn-default:hover {
            background-color: #5a6268;
        }

    input, select, textarea {
        width: 100%;
    }
</style>

<div>
    <h3>Chỉnh sửa bài nhạc</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" }) <!-- Hiển thị lỗi -->

        <div class="form-group">
            <p>Tên Bài Hát</p>
            @Html.EditorFor(m => m.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.DisplayName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <p>Ca Sĩ</p>
            @Html.EditorFor(m => m.casi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.casi, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <p>Lời Bài Hát</p>
            @Html.TextAreaFor(m => m.Cotenttype, new { htmlAttributes = new { @class = "form-control", rows = 5 } })
            @Html.ValidationMessageFor(m => m.Cotenttype, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        @Html.ActionLink("Hủy", "Songs", "Admin", null, new { @class = "btn btn-default" })
    }
</div>
